<h1>Pictures</h1>

<div id="pictures">
  <% @pictures.each do |picture| %>
    <%= link_to picture, class: "picture" do %>
          <%= image_tag picture.image, style: "width: 200px; display: block" %>
      <p>
    <%= picture.title %>
  </p>
  <% end %>
  <p>
    <small>By <%= picture.user.name %></small>
  </p>

  <% end %>
</div>

<%= link_to "New picture", new_picture_path %>

<section class="section">
  <div class="pictures">
    <% @pictures.each do |picture| %>
      <div class="picture-grid-item">
        <div class="picture-wrapper">

        <%= link_to picture, class: "picture" do %>
          <%= image_tag picture.image, style: "width: 200px; display: block" %>
          <div class="picture-data">
            <h3 class="picture-title"><%= picture.title %></h3>
            <div class="picture-description"><%= truncate(picture.description, length: 60) %></div>
            <div class="picture-time">
              <%= time_ago_in_words(picture.created_at) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</section>
