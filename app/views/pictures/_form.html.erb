<div class="card">
  <div class="card-body">
    <%= simple_form_for(@picture) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :image, label: "Choose Picture to Upload", input_html: { type: "file",  class: "form-control" } %>
        <br>
        <%= f.input :title %>
        <br>
        <%= f.input :description, :input_html => { :rows => 10 }%>
      </div>

      <div class="form-actions my-4">
        <%= f.button :submit, "Submit Now", class:"btn btn-success btn-lg"   %>
      </div>
    <% end %>
  </div>
</div>
