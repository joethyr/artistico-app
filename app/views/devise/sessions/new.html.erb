<div class="d-flex justify-content-center align-items-center">
  <div class="col col-xl-10">
    <div class="card" style="border-radius: 1rem;">
      <div class="row g-0">
        <div class="col-md-6 col-lg-5 d-none d-md-block">
            <%= image_tag "jonathan-borba-vUn_P1hl09M-unsplash.jpg", class: "img-fluid", style: "border-radius: 1rem 0 0 1rem;" %>
        </div>
        <div class="col-md-6 col-lg-7">
          <div class="card-body p-3 p-lg-4">
                <h1 class="mb-3">Log In</h1>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email", class: "mb-4 " } %>
                    <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password", class: "mb-4 " } %>
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>

                  <div class="form-actions my-4">
                    <%= f.button :submit, "Log In", class: "btn btn-primary btn-lg" %>
                  </div>
              <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
